<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shinewashing">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShineWashingRepo">
        <activity android:name=".initialize.SplashActivity"
            android:theme="@style/AppFullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".initialize.LoginActivity"
            android:theme="@style/AppFullScreen" />

        <activity
            android:name=".initialize.OtpVerifyActivity"
            android:theme="@style/AppFullScreen" />

        <activity android:name=".AddVehicleActivity"/>

        <activity android:name=".AddressActivity"/>

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.ShineWashingRepo" />

    </application>

</manifest>